<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :property_name %>
    <%= f.text_field :property_name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.number_field :rent, :min => 0  %>円
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :property_age %>
    <%= f.number_field :property_age, :min => 0  %>年
  </div>

  <div class="field">
    <%= f.label :remarks %>
    <%= f.text_area :remarks %>
  </div>

  <hr />
  
  <%= f.fields_for :stations do |stations_form| %>
    <h2>最寄り駅<%= stations_form.index + 1 %></h2>

    <div class="field">
      <%= stations_form.label :route_name %>
      <%= stations_form.text_field :route_name %>
    </div>

    <div class="field">
      <%= stations_form.label :station_name %>
      <%= stations_form.text_field :station_name %>
    </div>

    <div class="field">
      <%= stations_form.label :walk_fraction %>
      <%= stations_form.number_field :walk_fraction, :min => 0 %>分
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
