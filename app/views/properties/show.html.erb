<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= set_yen(@property.rent.to_s(:delimited)) %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= set_year(@property.property_age) %>
</p>

<p>
  <strong>備考</strong>
  <%= @property.remarks %>
</p>

<hr />

<% @property.stations.each_with_index do |station, i| %>
  <h3>最寄り駅<%= i + 1 %></h3>

  <p>
    <strong>路線名</strong>
    <%= station.route_name %>
  </p>

  <p>
    <strong>駅名</strong>
    <%= station.station_name %>
  </p>

  <p>
    <strong>徒歩分数</strong>
    <%= set_minute(station.walk_fraction) %>
  </p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
